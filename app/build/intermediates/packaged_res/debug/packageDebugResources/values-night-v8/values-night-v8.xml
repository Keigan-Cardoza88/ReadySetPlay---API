<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CompactButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingVertical">0dp</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="FloatingHintAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">8sp</item>
        <item name="android:translationY">-10dp</item>
        <item name="android:textColor">#CCCCCC</item>
    </style>
    <style name="IconButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
    </style>
    <style name="Theme.ReadySetPlayPerformanceCompanion" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryDark">@color/blue_400</item>
        <item name="colorAccent">@color/teal_200</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
</resources>